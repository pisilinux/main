            <Path fileType="executable">/usr/libexec/plymouth</Path>
            <Path fileType="config">/etc/plymouth</Path>
            <Path fileType="config">/etc/logrotate.d/bootlog</Path>
            <Path fileType="library">/usr/lib</Path>
