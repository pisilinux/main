    <Package>
        <Name>unvanquished</Name>
        <RuntimeDependencies>
            <Dependency>curl</Dependency>
			<Dependency>freetype</Dependency>
            <Dependency>libsdl2</Dependency> 
			<Dependency>glew</Dependency>
			<Dependency>gmp</Dependency> 
			<Dependency>libjpeg-turbo</Dependency> 
			<Dependency>ncurses</Dependency> 
			<Dependency>libogg</Dependency>
			<Dependency>openal</Dependency>
			<Dependency>libpng</Dependency>
			<Dependency>libvorbis</Dependency>
			<Dependency>speex</Dependency>
			<Dependency>webp</Dependency>
			<Dependency>libtheora</Dependency>
			<Dependency>mesa</Dependency>
			<Dependency>nettle</Dependency>
			<Dependency>libopus</Dependency>
			<Dependency>libopusfile</Dependency>
			<Dependency>geoip</Dependency>
       </RuntimeDependencies>
	   <Files>
		    <Path fileType="config">/etc</Path>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="executable">/usr/lib/unvanquished/daemon*</Path>
			<Path fileType="data">/usr/lib/unvanquished</Path>
			<Path fileType="data">/usr/share</Path>
            <Path fileType="doc">/usr/share/doc</Path>
        </Files>
		<AdditionalFiles>
			<AdditionalFile target="/usr/bin/unvanquished" permission="0755" owner="root">unvanquished.sh</AdditionalFile>
			<AdditionalFile target="/usr/bin/unvanquished-server" permission="0755" owner="root">unvanquished-tty.sh</AdditionalFile>
			<AdditionalFile target="/usr/share/pixmaps/unvanquished.png" permission="0644" owner="root">unvanquished.png</AdditionalFile>
			<AdditionalFile target="/etc/conf.d/unvanquished.conf" permission="0644" owner="root">unvanquished.conf</AdditionalFile>
			<AdditionalFile target="/etc/unvanquished/server.cfg" permission="0644" owner="root">server.cfg</AdditionalFile>
			<AdditionalFile target="/etc/unvanquished/maprotation.cfg" permission="0644" owner="root">maprotation.cfg</AdditionalFile>
			<AdditionalFile target="/usr/share/applications/unvanquished.desktop" permission="0644" owner="root">unvanquished.desktop</AdditionalFile>
	</AdditionalFiles>
    </Package>
    
