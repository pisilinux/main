            <Dependency>vala-devel</Dependency>
            <Dependency>glib2-devel</Dependency>
            <Dependency>gobject-introspection-devel</Dependency>
            <Dependency>json-glib-devel</Dependency>
        </BuildDependencies>
    </Source>

