        <BuildDependencies>
            <Dependency>llvm</Dependency>
			<Dependency>llvm-libs</Dependency>
            <Dependency>llvm-clang</Dependency>
            <Dependency>lld</Dependency>
            <Dependency>libc++-devel</Dependency>
			<Dependency>libffi-devel</Dependency>
