            <Path fileType="data">/usr/lib32/pkgconfig/</Path>
        </Files>
    </Package>

    <Package>
        <Name>icu4c-32bit</Name>
        <PartOf>emul32</PartOf>
        <Summary>32-bit shared libraries for icu4c</Summary>
        <BuildType>_emul32</BuildType>
        <BuildDependencies>
            <Dependency>libgcc</Dependency>
