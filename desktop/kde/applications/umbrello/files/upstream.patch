-        return false;
-    }
-    QTextStream stream(&file);
-    QString data = stream.readAll();
-    file.close();
-    QDomDocument doc;
-    QString error;
-    int line;
-    if (!doc.setContent(data, false, &error, &line)) {
-        uError() << "Cannot set content:" << error << " line:" << line;
