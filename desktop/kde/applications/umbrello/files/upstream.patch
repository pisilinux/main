+}
+
+/**
+ * Performs initializations which are common to PinWidget and PortWidget.
+ */
+void PinPortBase::init(UMLWidget *owner)
+{
+    m_ignoreSnapToGrid = true;
+    m_ignoreSnapComponentSizeToGrid = true;
+    m_resizable = false;
+    m_pOw = owner;
+    m_pName = NULL;
+    m_motionConnected = false;
