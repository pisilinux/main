+        uDebug() << "called on NULL attribute";
+        return;
+    }
+    uDebug() << "called for " << a->name();
+    disconnect(a, SIGNAL(modified()), this, SIGNAL(modified()));
+    int idx;
+    if ((idx=m_List.indexOf(a)) == -1) {
+        uDebug() << "Error move parm left " << a->name();
