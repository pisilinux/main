+ * Sets the changeability of the role.
+ *
+ * @param value   Changeability::Enum of role.
+ */
+void UMLRole::setChangeability(Uml::Changeability::Enum value)
+{
+    m_Changeability = value;
+    UMLObject::emitModified();
+}
