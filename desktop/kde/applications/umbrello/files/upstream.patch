-    // use a different calculation.
-    if (isSelf() &&
-            m_role[RoleType::A].m_WidgetRegion == m_role[RoleType::B].m_WidgetRegion) {
-        UMLWidget * pWidget = m_role[RoleType::A].umlWidget;
-        qreal x = pWidget->x();
-        qreal y = pWidget->y();
-        qreal wh = pWidget->height();
