+
+    painter->drawLine(startX + 40, 0, startX + 40, 10);
+    painter->drawLine(startX + 40, 10, startX + 50, 10);
+    painter->drawLine(startX + 40, 0, startX + 50, 10);
+
+    painter->setPen(textColor());
+    painter->setFont(font);
+
+    painter->drawText(0, h - fontHeight,
