+        break;
+    case ListPopupMenu::mt_Align_HorizontalDistribute:
+        umlScene()->alignHorizontalDistribute();
+        break;
+    default:
+        uDebug() << "MenuType " << ListPopupMenu::toString(sel) << " not implemented";
+        break;
+    }
+}
