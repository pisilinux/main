-                    break;
-                default:
-                    break;
-            }
-        } else {
-            if (role == RoleType::A)
-                pt = nearestPoints.p1();
-            else
-                pt = nearestPoints.p2();
-        }
-    }
-    if (role == RoleType::A) {
-        m_associationLine->setPoint(0, pt);
-    }
-    else {
-        m_associationLine->setPoint(m_associationLine->count() - 1, pt);
