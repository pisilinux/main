+        break;
+    case  UMLObject::ot_Enum:
+        name = i18n("Enum &name:");
+        break;
+    case  UMLObject::ot_Folder:
+        name = i18n("Folder &name:");
+        break;
+    case  UMLObject::ot_Interface:
+        name = i18n("Interface &name:");
+        break;
+    case  UMLObject::ot_Node:
+        name = i18n("Node &name:");
+        break;
+    case  UMLObject::ot_Package:
