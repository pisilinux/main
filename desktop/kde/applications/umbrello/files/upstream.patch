+        m_List.append(literal);
+        UMLObject::emitModified();
+        emit enumLiteralAdded(literal);
+        connect(literal, SIGNAL(modified()), this, SIGNAL(modified()));
+        return true;
+    } else if (Log) {
+        Log->removeChangeByNewID(literal->id());
+        delete literal;
+    }
+    return false;
