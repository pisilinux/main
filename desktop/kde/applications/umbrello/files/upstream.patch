-        case Uml::Region::South:
-            m_associationLine->setPoint( 0, QPointF( x + ( ww / 4 ), y + wh ) );
-            m_associationLine->setPoint( size - 1, QPointF( x + ( ww * 3 / 4 ), y + wh ) );
