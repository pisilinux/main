+    /**
+     * Converts a comma separated string to point.
+     */
+    QPointF stringToPoint(const QString& str)
+    {
+        QPointF retVal;
+        QStringList list = str.split(QLatin1Char(','));
+
+        if(list.size() == 2) {
+            retVal.setX(list.first().toDouble());
