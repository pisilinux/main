+    UMLObject *obj = NULL;
+    for (UMLObjectListIt oit(m_List); oit.hasNext();) {
+        obj = oit.next();
+        uIgnoreZeroPointer(obj);
+        if (obj->baseType() == UMLObject::ot_Association)
