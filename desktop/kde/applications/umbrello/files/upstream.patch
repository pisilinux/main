+/**
+ * Retrieve all Pairs of Attributes.
+ */
+QMap<UMLEntityAttribute*, UMLEntityAttribute*> UMLForeignKeyConstraint::getEntityAttributePairs()
+{
+    return m_AttributeMap;
+}
