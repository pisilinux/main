+        if (x2 > x1) {
+            if (x1 <= sol_2 && sol_2 <= x2)
+                return sol2Point;
+        } else {
+            if (x2 <= sol_2 && sol_2 <= x1)
+                return sol2Point;
+        }
+    } else if (sol_1 >= 0 && sol_2 < 0) {
+        if (x2 > x1) {
+            if (x1 <= sol_1 && sol_1 <= x2)
+                return sol1Point;
+        } else {
+            if (x2 <= sol_1 && sol_1 <= x1)
+                return sol1Point;
+        }
+    } else {
+        if (x2 > x1) {
+            if (x1 <= sol_1 && sol_1 <= x2)
+                return sol1Point;
+            if (x1 <= sol_2 && sol_2 <= x2)
+                return sol2Point;
+        } else {
+            if (x2 <= sol_1 && sol_1 <= x1)
+                return sol1Point;
+            if (x2 <= sol_2 && sol_2 <= x1)
+                return sol2Point;
+        }
+    }
+    return QPointF(-1, -1);
+}
