+    }
+
+    int lines;
+    if (!stereotype.isEmpty()) {
+        lines = 2;
+    } else {
+        lines = 1;
+    }
+
+    if (lines == 1) {
+        painter->drawText(0, (h/2) - (fontHeight/2),
+                   w, fontHeight, Qt::AlignCenter, name());
+    } else {
+        painter->drawText(0, (h/2),
+                   w, fontHeight, Qt::AlignCenter, name());
+    }
+
+    UMLWidget::paint(painter, option);
+}
