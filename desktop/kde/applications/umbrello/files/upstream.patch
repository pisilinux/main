+bool UMLCanvasObject::operator==(const UMLCanvasObject& rhs) const
+{
+    if (this == &rhs) {
+        return true;
+    }
+    if (!UMLObject::operator==(rhs)) {
+        return false;
+    }
+    if (m_List.count() != rhs.m_List.count()) {
+        return false;
+    }
+    if (&m_List != &(rhs.m_List)) {
+        return false;
+    }
+    return true;
