+
+    int x1 = m_pOw[Uml::RoleType::A]->centerX();
+    int x2 = m_pOw[Uml::RoleType::B]->centerX();
+
+    int widgetWidth = 0;
+    int widgetHeight = 0;
+    if(isSelf()) {
+        widgetWidth = 50;
+        x = x1 - 2;
+    } else if(x1 < x2) {
+        x = x1;
+        widgetWidth = x2 - x1 + 8;
+    } else {
+        x = x2 - 8;
+        widgetWidth = x1 - x2 + 8;
+    }
+
+    if (height() < 20) {
+        widgetHeight = 20;
+    } else {
+        widgetHeight = height();
+    }
+
+    setX(x);
+    setSize(widgetWidth, widgetHeight);
+}
