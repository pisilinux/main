-    if (!m_moved) {
-        UMLApp::app()->document()->writeToStatusBar(i18n("Hold shift or ctrl to move in X axis. Hold shift and control to move in Y axis. Right button click to cancel move."));
-
-        m_moved = true;
-        //Maybe needed by AssociationWidget
-        m_startMove = true;
-
-        setSelectionBounds();
