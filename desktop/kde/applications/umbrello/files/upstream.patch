+        break;
+    }
+    case ListPopupMenu::mt_Align_Right:
+        umlScene()->alignRight();
+        break;
+    case ListPopupMenu::mt_Align_Left:
+        umlScene()->alignLeft();
+        break;
+    case ListPopupMenu::mt_Align_Top:
+        umlScene()->alignTop();
+        break;
+    case ListPopupMenu::mt_Align_Bottom:
