+                break;
+              case Uml::TextRole::RoleAName:
+                assoc->setRoleName(QString(), Uml::RoleType::A);
+                break;
+              case Uml::TextRole::RoleBName:
+                assoc->setRoleName(QString(), Uml::RoleType::B);
+                break;
