+void CombinedFragmentWidget::paint(QPainter *painter, const QStyleOptionGraphicsItem *option, QWidget *widget)
+{
+    Q_UNUSED(option);
+    Q_UNUSED(widget);
+
+    int w = width();
+    int h = height();
+    int line_width = 45;
+    int old_Y;
+
+    setPenFromSettings(painter);
+
+    if (m_CombinedFragment == Ref) {
