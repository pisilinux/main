+    const QFontMetrics &fm = getFontMetrics(FT_BOLD_ITALIC);
+    const int fontHeight  = fm.lineSpacing();
+
+    int width = fm.width(m_umlObject->name());
+
+    int tempWidth = 0;
+    if(!m_umlObject->stereotype().isEmpty()) {
