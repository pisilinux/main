-    while (!node.isNull()) {
-        if (node.isComment()) {
-            node = node.nextSibling();
-            continue;
-        }
-        QDomElement tempElement = node.toElement();
-        QString tag = tempElement.tagName();
-        if (UMLDoc::tagEq(tag, QLatin1String("AttributeMap"))) {
-
-            QString xmiKey = tempElement.attribute(QLatin1String("key"));
