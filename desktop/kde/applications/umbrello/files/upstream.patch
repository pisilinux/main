+    bool oldIgnoreSnapToGrid = ft->getIgnoreSnapToGrid();
+    ft->setIgnoreSnapToGrid(true);
+    ft->setX(ftNewX);
+    ft->setY(ftNewY);
+    ft->setIgnoreSnapToGrid(oldIgnoreSnapToGrid);
+}
