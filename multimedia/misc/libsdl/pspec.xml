    <Package>
        <Name>libsdl-docs</Name>
        <Summary>libsdl reference documents</Summary>
        <RuntimeDependencies>
            <Dependency>libsdl</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="man">/usr/share/man</Path>
            <Path fileType="doc">/usr/share/doc</Path>
        </Files>
    </Package>

    <Package>
        <Name>libsdl</Name>
        <RuntimeDependencies>
            <Dependency versionFrom="1.7.1">DirectFB</Dependency>
            <Dependency>aalib</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/lib</Path>
        </Files>
    </Package>

    <Package>
        <Name>libsdl-devel</Name>
        <Summary>Development files for libsdl</Summary>
        <RuntimeDependencies>
            <Dependency release="current">libsdl</Dependency>
            <Dependency versionFrom="1.7.7">DirectFB-devel</Dependency>
            <Dependency>alsa-lib-devel</Dependency>
            <Dependency>aalib-devel</Dependency>
            <Dependency>libX11-devel</Dependency>
            <Dependency>libusb-compat-devel</Dependency>
            <Dependency>libXtst-devel</Dependency>
            <Dependency>libICE-devel</Dependency>
            <Dependency>libXrandr-devel</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="data">/usr/lib/pkgconfig</Path>
            <Path fileType="data">/usr/lib32/pkgconfig</Path>
            <Path fileType="library">/usr/lib/libSDLmain.a</Path>
            <Path fileType="data">/usr/share/aclocal</Path>
        </Files>
    </Package>

    <Package>
        <Name>libsdl-32bit</Name>
        <PartOf>emul32</PartOf>
        <Summary>32-bit shared libraries for libsdl</Summary>
        <BuildType>emul32</BuildType>
        <BuildDependencies>
            <Dependency>libsdl2-32bit</Dependency>
        </BuildDependencies>
        <RuntimeDependencies>
            <Dependency release="current">libsdl</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="library">/usr/lib32</Path>
        </Files>
    </Package>

