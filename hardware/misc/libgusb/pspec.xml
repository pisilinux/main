            <Dependency>docbook-xsl</Dependency>
            <Dependency>glib2-devel</Dependency>
            <Dependency>vala-devel</Dependency>
            <Dependency>libxslt-devel</Dependency>
            <Dependency>libxml2-devel</Dependency>
