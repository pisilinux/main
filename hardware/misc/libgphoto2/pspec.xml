        </Files>
        <Provides>
            <!-- <COMAR script="package.py">System.Package</COMAR> -->
        </Provides>
    </Package>

    <Package>
        <Name>libgphoto2-docs</Name>
        <Summary>Documentation for libgphoto2</Summary>
