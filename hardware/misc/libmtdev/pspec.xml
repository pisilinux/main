           <Dependency>glibc-32bit</Dependency>
       </BuildDependencies>
       <RuntimeDependencies>
           <Dependency release="current">libmtdev</Dependency>
           <Dependency>glibc-32bit</Dependency>
       </RuntimeDependencies>
       <Files>
           <Path fileType="library">/usr/lib32</Path>
