            <Dependency>cups-devel</Dependency>
            <Dependency>jbigkit-devel</Dependency>
        </BuildDependencies>
        <Patches>
            <Patch level="1">splix-1.1.0-fix-makefile.patch</Patch>
<!--             <Patch level="1">splix-nostrip.patch</Patch> -->
