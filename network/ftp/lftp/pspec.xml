            <Path fileType="data">/usr/share/lftp</Path>
            <Path fileType="data">/usr/share/pixmaps</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile target="/usr/share/pixmaps/lftp.png">lftp.png</AdditionalFile>
        </AdditionalFiles>
    </Package>

