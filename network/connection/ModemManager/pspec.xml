            <Path fileType="man">/usr/share/man/man8/ModemManager.8</Path>
            <Path fileType="man">/usr/share/man/man1/mmcli.1</Path>
<!--             <Path fileType="data">/usr/share/gtk-doc</Path> -->
            <Path fileType="data">/usr/share/polkit-1</Path>
